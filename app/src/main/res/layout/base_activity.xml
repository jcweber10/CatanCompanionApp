<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catan">

    <Button
        android:id="@+id/roll"
        android:text="roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:onClick="setTexts"
        />


    <Button
        android:id="@+id/rollsLog"
        android:text="Lauch Rolls Log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="launchRollsLog"
        android:layout_below="@+id/roll"/>
    <Button
        android:id="@+id/stats"
        android:text="Stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rollsLog"
        android:soundEffectsEnabled="false"
        android:onClick="launchStats"/>
    <ImageView
        android:id="@+id/redView"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_below="@+id/stats"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="24dp"
        />
    <ImageView
        android:id="@+id/yellowView"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_below="@+id/stats"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp"
        android:layout_marginTop="24dp"
        />
    <ImageView
        android:id="@+id/eventDie"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/yellowView"
        android:src="@drawable/eventblue"
        />

    <Button
        android:id="@+id/endGame"
        android:text="End game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="endGame"
        />


</RelativeLayout>